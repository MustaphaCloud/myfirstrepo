// program to find the LCM of two integers

// take input
const num1 = parseInt(prompt('Enter the first positive integer: '));
const num2 = parseInt(prompt('Enter the second positive integer: '));

// higher number among num1 and num2 is stored in min
let min = (num1 > num2) ? num1 : num2;

// while loop
while (true) {
    if (min % num1 === 0 && min % num2 === 0) {
        console.log(`The LCM of ${num1} and ${num2} is ${min}`);
        break;
    }
    min++;
}
